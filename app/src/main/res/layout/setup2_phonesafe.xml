<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mobilesafe74.activity.PhoneSafeSetup2Activity"
    android:orientation="vertical">
    <TextView
        android:text="2 手机卡绑定"
        style="@style/TitleTextView" />
    <TextView
        android:padding="5dp"
        android:textSize="18sp"
        android:textColor="#000"
        android:text="通过绑定sim卡:
下次重启手机,如果发现sim卡变化
便会发送报警短信"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.example.mobilesafe74.view.SettingItemView
        xmlns:mobilesafe="http://schemas.android.com/apk/res/com.example.mobilesafe74"
        android:layout_margin="2dp"
        android:id="@+id/siv_setup2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        mobilesafe:title = "绑定sim卡"
        mobilesafe:des_on = "sim卡已绑定"
        mobilesafe:des_off = "sim卡没有绑定"
        >
    </com.example.mobilesafe74.view.SettingItemView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/presence_invisible"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/presence_online"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/presence_invisible"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/presence_invisible"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:background="@drawable/bind"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_set2_pre"
            style="@style/BtnPrePage" />
        <Button
            android:id="@+id/btn_set2_next"
            style="@style/BtnNextPage" />
    </RelativeLayout>



</LinearLayout>
