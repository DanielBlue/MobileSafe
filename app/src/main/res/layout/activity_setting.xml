<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        style="@style/TitleTextView"
        android:text="设置中心"/>

    <com.example.mobilesafe74.view.SettingItemView
        xmlns:mobilesafe="http://schemas.android.com/apk/res/com.example.mobilesafe74"
        android:id="@+id/siv_update"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        mobilesafe:title = "自动更新设置"
        mobilesafe:des_on = "自动更新已开启"
        mobilesafe:des_off = "自动更新已关闭"
        >
    </com.example.mobilesafe74.view.SettingItemView>
    <com.example.mobilesafe74.view.SettingItemView
        xmlns:mobilesafe="http://schemas.android.com/apk/res/com.example.mobilesafe74"
        android:id="@+id/siv_phone_from"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        mobilesafe:title = "电话归属地的显示设置"
        mobilesafe:des_on = "电话归属地已开启"
        mobilesafe:des_off = "电话归属地已关闭"
        >
    </com.example.mobilesafe74.view.SettingItemView>

</LinearLayout>