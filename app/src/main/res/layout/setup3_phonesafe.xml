<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PhoneSafeSetup3Activity"
    android:orientation="vertical">
    <TextView
        android:text="3 变更安全号码"
        style="@style/TitleTextView" />
    <TextView
        android:padding="5dp"
        android:textSize="18sp"
        android:textColor="#000"
        android:text="sim卡变更后\n报警短信会发送给安全号码"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/et_safe_contact"
        android:textSize="18sp"
        android:maxLines="1"
        android:hint="请输入安全号码"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/bt_choose_contact"
        android:layout_margin="5dp"
        android:textSize="18sp"
        android:text="联系人"
        android:background="@drawable/btn_choose_contacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/presence_invisible"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/presence_invisible"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/presence_online"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/presence_invisible"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_centerInParent="true"
            android:background="@drawable/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_set3_pre"
            style="@style/BtnPrePage"/>
        <Button
            android:id="@+id/btn_set3_next"
            style="@style/BtnNextPage" />
    </RelativeLayout>

</LinearLayout>
